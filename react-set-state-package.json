{
  "name": "react-set-signal",
  "version": "1.0.12",
  "description": "A lightweight React library that brings the power of Preact Signals to React applications with enhanced features and an intuitive API.",
  "keywords": [
    "react",
    "signals",
    "state-management",
    "preact-signals",
    "reactive",
    "reactivity",
    "hooks",
    "state",
    "lightweight",
    "performance",
    "immutable",
    "mutative"
  ],
  "author": "Ramkumar K",
  "email": "slashnot84@gmail.com",
  "homepage": "https://slashnot.github.io/react-set-signal",
  "main": "./dist/reactSetSignal.js",
  "types": "./index.d.ts",
  "files": [
    "dist",
    "hooks",
    "utils",
    "index.js",
    "index.d.ts",
    "*.d.ts"
  ],
  "license": "ISC",
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "import": {
        "production": "./dist/reactSetSignal.js",
        "default": "./index.js"
      }
    }
  },
  "scripts": {
    "build": "vite build",
    "predeploy": "cd examples/react-set-signal-example && pnpm run build",
    "deploy": "npx gh-pages -d examples/react-set-signal-example/dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "packageManager": "pnpm@10.23.0",
  "dependencies": {
    "@preact/signals-core": "^1.10.0",
    "mutative": "^1.2.0"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "gh-pages": "^6.3.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitest/coverage-v8": "4.0.13",
    "@vitest/ui": "4.0.13",
    "jsdom": "^27.2.0",
    "typescript": "^5.9.3",
    "vite": "^7.0.5",
    "vitest": "^4.0.13"
  }
}