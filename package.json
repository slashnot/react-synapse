{
  "name": "react-synapse",
  "version": "0.2.0",
  "type": "module",
  "description": "A lightweight React library for fine-grained reactive state management using Preact Signals, with built-in immutable updates via Mutative, minimal re-renders, and global store support.",
  "keywords": [
    "react",
    "signals",
    "state-management",
    "preact-signals",
    "reactive",
    "reactivity",
    "hooks",
    "global-store",
    "immutable",
    "mutative",
    "fine-grained",
    "typescript"
  ],
  "author": "Ramkumar K",
  "email": "slashnot84@gmail.com",
  "homepage": "https://slashnot.github.io/react-synapse",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./index.d.ts",
  "sideEffects": false,
  "files": [
    "dist",
    "index.d.ts",
    "store.d.ts",
    "signals.d.ts"
  ],
  "license": "ISC",
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./store": {
      "types": "./store.d.ts",
      "import": "./dist/store.js",
      "require": "./dist/store.js"
    },
    "./signals": {
      "types": "./signals.d.ts",
      "import": "./dist/signals.js",
      "require": "./dist/signals.js"
    }
  },
  "scripts": {
    "build": "vite build",
    "predeploy": "cd example && pnpm run build",
    "deploy": "npx gh-pages -d example/dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "packageManager": "pnpm@10.23.0",
  "dependencies": {
    "gh-pages": "^6.3.0"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "peerDependenciesMeta": {
    "react-dom": {
      "optional": true
    }
  },
  "devDependencies": {
    "react-set-signal": "^1.0.12",
    "@eslint/js": "^9.39.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitest/coverage-v8": "4.0.13",
    "@vitest/ui": "4.0.13",
    "eslint": "^9.39.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "eslint-plugin-unused-imports": "^4.3.0",
    "globals": "^16.5.0",
    "jsdom": "^27.2.0",
    "typescript": "^5.9.3",
    "vite": "^7.0.5",
    "vitest": "^4.0.13"
  }
}